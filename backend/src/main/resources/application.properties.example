# Server Configuration
server.port=8081
spring.application.name=streetbite-backend

# Google Geocoding API Key
google.geocoding.api.key=${GOOGLE_MAPS_API_KEY:}

# Firebase Configuration
firebase.credentials.path=${GOOGLE_APPLICATION_CREDENTIALS:./firebase-key.json}


# CORS Configuration
# Handled by CorsConfig.java which listens to 'ALLOWED_ORIGINS' environment variable
# cors.allowed-origins is not directly used by the custom config but kept for reference
cors.allowed-origins=${ALLOWED_ORIGINS:http://localhost:3000,http://localhost:3001,http://localhost:4000}

# Logging
logging.level.com.streetbite=INFO
logging.level.org.springframework.web=INFO
logging.level.org.springframework.transaction=DEBUG
logging.level.org.springframework.orm.jpa=DEBUG
logging.level.org.hibernate.resource.transaction=DEBUG

# Database Configuration (MySQL)
# Uses environment variables for Render/Aiven, falls back to localhost for dev
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:mysql://localhost:3306/streetbite?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:YOUR_DB_USERNAME}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:YOUR_DB_PASSWORD}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA / Hibernate
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# File Upload Limits
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

