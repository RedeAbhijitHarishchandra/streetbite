@import 'tailwindcss';

/* ============================================
   STREETBITE - PREMIUM ENHANCED THEME
   Complete UI Enhancement Suite
   ============================================ */

:root {
  /* Core Colors */
  --background: #FFFBF5;
  --foreground: #1C1410;
  --card: #FFFFFF;
  --card-foreground: #1C1410;
  --popover: #FFFFFF;
  --popover-foreground: #1C1410;

  /* Brand Colors */
  --primary: #EA580C;
  --primary-foreground: #FFFFFF;
  --secondary: #F59E0B;
  --secondary-foreground: #FFFFFF;
  --accent: #D97706;
  --accent-foreground: #FFFFFF;

  /* UI Elements */
  --muted: #FEF3E2;
  --muted-foreground: #78350F;
  --success: #16A34A;
  --success-foreground: #FFFFFF;
  --destructive: #DC2626;
  --destructive-foreground: #FFFFFF;
  --border: #FDECC8;
  --input: #FFFFFF;
  --ring: #EA580C;
  --radius: 0.875rem;

  /* Chart Colors */
  --chart-1: #EA580C;
  --chart-2: #F59E0B;
  --chart-3: #16A34A;
  --chart-4: #DC2626;
  --chart-5: #78350F;
}

.dark {
  --background: #180F09;
  --foreground: #FDECC8;
  --card: #2A1F16;
  --card-foreground: #FDECC8;
  --popover: #2A1F16;
  --popover-foreground: #FDECC8;
  --primary: #FB923C;
  --primary-foreground: #180F09;
  --secondary: #FCD34D;
  --secondary-foreground: #180F09;
  --accent: #FBBF24;
  --accent-foreground: #180F09;
  --muted: #3E2A1D;
  --muted-foreground: #F3D3A9;
  --success: #22C55E;
  --success-foreground: #180F09;
  --destructive: #EF4444;
  --destructive-foreground: #FDECC8;
  --border: #3E2A1D;
  --input: #2A1F16;
  --ring: #FB923C;
}

@theme {
  --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
  --font-heading: 'Outfit', sans-serif;
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    @apply bg-background text-foreground font-sans antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-heading font-bold tracking-tight;
  }

  /* Enhanced Scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
    height: 12px;
  }

  ::-webkit-scrollbar-track {
    background: var(--muted);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #EA580C, #F59E0B, #D97706);
    border-radius: 10px;
    border: 2px solid var(--muted);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #C2410C, #D97706, #B45309);
  }
}

/* Animations */
@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(30px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scale-in {
  from {
    opacity: 0;
    transform: scale(0.9);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes float {

  0%,
  100% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-12px);
  }
}

@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }

  100% {
    background-position: 1000px 0;
  }
}

@keyframes glow-pulse {

  0%,
  100% {
    box-shadow: 0 0 20px rgba(234, 88, 12, 0.4), 0 0 40px rgba(245, 158, 11, 0.2);
  }

  50% {
    box-shadow: 0 0 30px rgba(234, 88, 12, 0.6), 0 0 60px rgba(245, 158, 11, 0.4);
  }
}

@keyframes gradient-shift {

  0%,
  100% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: -200% 0;
  }
}

@keyframes pulse-warm {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.7;
  }
}

@keyframes bounce-in {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }

  50% {
    transform: scale(1.05);
  }

  70% {
    transform: scale(0.9);
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes slide-in-right {
  from {
    transform: translateX(100%);
    opacity: 0;
  }

  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Food-Specific Animations */
@keyframes steam {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.7;
  }

  50% {
    transform: translateY(-20px) scale(1.1);
    opacity: 0.3;
  }

  100% {
    transform: translateY(-40px) scale(1.2);
    opacity: 0;
  }
}

@keyframes sparkle {

  0%,
  100% {
    opacity: 0;
    transform: scale(0);
  }

  50% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes food-glow {

  0%,
  100% {
    box-shadow: 0 0 10px rgba(234, 88, 12, 0.3);
  }

  50% {
    box-shadow: 0 0 20px rgba(234, 88, 12, 0.6), 0 0 30px rgba(245, 158, 11, 0.3);
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes confetti-fall {
  to {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

@layer utilities {

  /* Base Animations */
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }

  .animate-slide-up {
    animation: slide-up 0.9s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-scale-in {
    animation: scale-in 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  .animate-float {
    animation: float 3.5s ease-in-out infinite;
  }

  .animate-glow-pulse {
    animation: glow-pulse 2.5s ease-in-out infinite;
  }

  .pulse-warm {
    animation: pulse-warm 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .bounce-in {
    animation: bounce-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .slide-in-right {
    animation: slide-in-right 0.3s ease-out;
  }

  /* Glass Effects */
  .glass {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    border: 1px solid rgba(253, 236, 200, 0.5);
  }

  /* Gradients */
  .text-gradient {
    background: linear-gradient(135deg, #EA580C 0%, #F59E0B 50%, #D97706 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .bg-gradient-warm {
    background: linear-gradient(135deg, #EA580C 0%, #F59E0B 100%);
  }

  /* Shadows */
  .shadow-soft {
    box-shadow: 0 2px 12px rgba(234, 88, 12, 0.06), 0 6px 24px rgba(245, 158, 11, 0.08);
  }

  .shadow-elevated {
    box-shadow: 0 6px 20px rgba(234, 88, 12, 0.12), 012px 40px rgba(245, 158, 11, 0.14);
  }

  .shadow-floating {
    box-shadow: 0 12px 40px rgba(234, 88, 12, 0.16), 0 24px 80px rgba(245, 158, 11, 0.18);
  }

  .shadow-warm-glow {
    box-shadow: 0 0 24px rgba(234, 88, 12, 0.5), 0 0 48px rgba(245, 158, 11, 0.3);
  }

  /* Transitions */
  .transition-all {
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .transition-transform {
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hover Effects */
  .hover-lift {
    transition: transform 0.35s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.35s ease;
  }

  .hover-lift:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 16px 48px rgba(234, 88, 12, 0.25), 0 8px 24px rgba(245, 158, 11, 0.15);
  }

  .hover-glow {
    transition: box-shadow 0.4s ease, transform 0.3s ease;
  }

  .hover-glow:hover {
    box-shadow: 0 0 0 4px rgba(234, 88, 12, 0.15), 0 12px 40px rgba(245, 158, 11, 0.25);
    transform: translateY(-2px);
  }

  .hover-scale:hover {
    transform: scale(1.05);
  }

  /* Micro-Interactions */
  .btn-press {
    transition: transform 0.1s cubic-bezier(0.4, 0, 0.6, 1);
    will-change: transform;
  }

  .btn-press:active {
    transform: scale(0.96);
  }

  .card-tilt {
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform;
    transform: perspective(1000px) rotateX(0deg) rotateY(0deg);
  }

  .card-tilt:hover {
    transform: perspective(1000px) rotateX(2deg) rotateY(-2deg) translateY(-4px);
  }

  .ripple {
    position: relative;
    overflow: hidden;
  }

  .ripple::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .ripple:active::after {
    width: 300px;
    height: 300px;
  }

  /* Skeleton Loader */
  .skeleton {
    background: linear-gradient(90deg, #FEF3E2 0%, #FDECC8 50%, #FEF3E2 100%);
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s ease-in-out infinite;
    border-radius: var(--radius);
  }

  /* Food Effects */
  .steam {
    position: relative;
  }

  .steam::before,
  .steam::after {
    content: '';
    position: absolute;
    top: -10px;
    width: 3px;
    height: 30px;
    background: linear-gradient(to top, rgba(255, 255, 255, 0.6), transparent);
    border-radius: 50%;
    animation: steam 3s ease-in-out infinite;
  }

  .steam::before {
    left: 50%;
  }

  .steam::after {
    left: 60%;
    animation-delay: 0.5s;
  }

  .food-sparkle {
    animation: sparkle 2s ease-in-out infinite;
  }

  .food-glow {
    animation: food-glow 2s ease-in-out infinite;
  }

  .food-zoom {
    transition: transform 0.3s ease;
  }

  .food-zoom:hover {
    transform: scale(1.1);
    z-index: 10;
  }

  /* Toasts */
  .toast {
    position: fixed;
    padding: 1rem 1.5rem;
    border-radius: var(--radius);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    animation: slide-in-right 0.3s ease-out;
    z-index: 9999;
  }

  .toast-success {
    background: #16A34A;
    color: white;
  }

  .toast-error {
    background: #DC2626;
    color: white;
  }

  /* Enhanced Buttons */
  .btn-outline {
    border: 2px solid var(--primary);
    color: var(--primary);
    background: transparent;
    transition: all 0.3s ease;
  }

  .btn-outline:hover {
    background: var(--primary);
    color: var(--primary-foreground);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(234, 88, 12, 0.3);
  }

  .btn-gradient {
    background: linear-gradient(135deg, #EA580C, #F59E0B);
    color: white;
    border: none;
    transition: all 0.3s ease;
  }

  .btn-gradient:hover {
    background: linear-gradient(135deg, #C2410C, #D97706);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(234, 88, 12, 0.4);
  }

  /* Loading */
  .spinner {
    border: 3px solid rgba(234, 88, 12, 0.1);
    border-top-color: var(--primary);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 0.8s linear infinite;
  }

  .progress-bar {
    height: 8px;
    background: var(--muted);
    border-radius: 9999px;
    overflow: hidden;
  }

  .progress-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #EA580C, #F59E0B);
    border-radius: 9999px;
    transition: width 0.3s ease;
  }

  /* Badges */
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 9999px;
  }

  .badge-primary {
    background: var(--primary);
    color: var(--primary-foreground);
  }

  /* Price Tag */
  .price-tag {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #EA580C, #F59E0B);
    color: white;
    font-weight: bold;
    border-radius: 0.5rem;
    box-shadow: 0 4px 12px rgba(234, 88, 12, 0.3);
  }

  /* FAB */
  .fab {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, #EA580C, #F59E0B);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 24px rgba(234, 88, 12, 0.4);
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 1000;
  }

  .fab:hover {
    transform: scale(1.1) rotate(90deg);
    box-shadow: 0 12px 32px rgba(234, 88, 12, 0.5);
  }

  /* Utilities */
  .gpu-accelerate {
    transform: translateZ(0);
    will-change: transform;
  }

  .focus-ring {
    @apply focus:outline-none focus:ring-4 focus:ring-primary/20 focus:border-primary;
  }

  .touch-target {
    min-width: 44px;
    min-height: 44px;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

